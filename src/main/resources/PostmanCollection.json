{
  "info": {
    "name": "Web Content Fetcher API",
    "description": "Collection for testing the Web Content Fetcher REST API",
    "version": "1.0.0"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/fetch/health",
          "host": ["{{base_url}}"],
          "path": ["api", "fetch", "health"]
        },
        "description": "Check if the service is running"
      }
    },
    {
      "name": "Get Available Endpoints",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/fetch/endpoints",
          "host": ["{{base_url}}"],
          "path": ["api", "fetch", "endpoints"]
        },
        "description": "Get information about all available endpoints"
      }
    },
    {
      "name": "Raw Text - POST",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"url\": \"https://httpbin.org/json\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/fetch/raw-text",
          "host": ["{{base_url}}"],
          "path": ["api", "fetch", "raw-text"]
        },
        "description": "Fetch raw text content using POST method"
      }
    },
    {
      "name": "Raw Text - GET",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/api/fetch/raw-text?url=https://httpbin.org/json",
          "host": ["{{base_url}}"],
          "path": ["api", "fetch", "raw-text"],
          "query": [
            {
              "key": "url",
              "value": "https://httpbin.org/json"
            }
          ]
        },
        "description": "Fetch raw text content using GET method"
      }
    },
    {
